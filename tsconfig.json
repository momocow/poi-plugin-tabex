{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "include": [
    "src/**/*",
    "shims/**/*",
    ".storybook/stories/**/*", ".storybook/utils.js"
  ]
}