{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": ["standard-with-typescript", "standard-react"],
    "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
            "globalReturn": false,
            "jsx": true
        },
        "ecmaVersion": 12
    }
}
